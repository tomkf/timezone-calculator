     const move = () => { 
      var myplane = document.getElementById("plane"); 
      var mydiv2 = document.getElementById("div2"); 
      myplane.style.left = parseInt(myplane.style.left) + 1 + "px"; 
      counter += 1; 
      console.log(counter);
      if (counter >= 375) { 
          clearInterval(myinter); 
         myplane.style.display = "none"; 
          } 
         }; 
    
         const movePlane = () => { 
             console.log("test"); 
             myinter = setInterval(move, 8); 
             }; 

       onload = movePlane() 
    </script>
</body>
</html>